@import '~flexstyl/flex'

.sled
  .slides
    cursor pointer
    overflow hidden
    position relative
    max-height inherit
    width 100%

    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    .slide
      flex line
      flex center
      position absolute
      height 100%
      max-height inherit
      top 0; left 0
      width 100%
      z-index -2
      transform translateX(100%)
      transition .8s ease

      &:first-child
        position relative
        transform translateX(0)

      & > *
        max-width 100%
        max-height inherit
